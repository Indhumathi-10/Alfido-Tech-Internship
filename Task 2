import random

def play_game():
    number = random.randint(1, 100)
    chances = 7

    print("\nğŸ® Welcome to the Number Guessing Game!")
    print("I have picked a number between 1 and 100.")
    print(f"You have {chances} chances to guess it correctly.\n")

    for attempt in range(1, chances + 1):
        try:
            guess = int(input(f"Attempt {attempt} of {chances} - Enter your guess: "))

            if guess < 1 or guess > 100:
                print("ğŸš« Please guess a number between 1 and 100.\n")
                continue

            if guess == number:
                print(f"ğŸ‰ You guessed it right in {attempt} attempts! The number was {number}.")
                break
            elif guess < number:
                print("ğŸ“‰ Too low!\n")
            else:
                print("ğŸ“ˆ Too high!\n")
        except ValueError:
            print("âš ï¸ Invalid input. Please enter a number.\n")

    else:
        print(f"ğŸ˜ Sorry, you've used all your chances. The number was {number}.")

def main():
    while True:
        play_game()
        again = input("\nğŸ” Do you want to play again? (yes/no): ").lower()
        if again != 'yes':
            print("ğŸ‘‹ Thanks for playing. Goodbye!")
            break

main()
